---
import { getLangFromUrl, useTranslations } from '@i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

import Partial from '@layouts/Partial.astro'
import CharacterInfo from '@components/blocks/CharacterInfo.astro'

const character_id = parseInt(Astro.url.searchParams.get('character_id'))
---
<Partial>
    <CharacterInfo character_id={character_id} />
</Partial>