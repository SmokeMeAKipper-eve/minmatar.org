---
import { getLangFromUrl, useTranslations, useTranslatedPath } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

Astro.cookies.delete('primary_pilot', { path: '/' })

const redirect = Astro.cookies.has('redirect_after_add_primary_pilot') ? Astro.cookies.get('redirect_after_add_primary_pilot').value : translatePath('/account/')
Astro.cookies.delete('redirect_after_add_primary_pilot', { path: '/' })

return Astro.redirect(redirect)
