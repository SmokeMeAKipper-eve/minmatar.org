---
interface Props {
    max_width?: string;
    [propName: string]: any;
}

const {
    max_width = '80rem',
} = Astro.props;

import Wrapper from '@components/compositions/Wrapper.astro';

const subheader_content = await Astro.slots.render('subheader');
---

<div class="[ post-header ]">
    <Wrapper class="[ main-bar dark-transparency ]" padding_block="var(--space-xs)" max_width={max_width} neocom={true} centered={true}>
        <slot />
    </Wrapper>

    {subheader_content !== '' &&
        <div class="[ subheader-bar ] [ light-transparency ]">
            <Wrapper max_width="var(--max-content-width)" padding_block='var(--space-2xs)'>
                <Wrapper max_width="var(--max-col-width)" padding_inline="0" padding_block="0" class="[ w-full ]">
                    <slot name="subheader" />
                </Wrapper>
            </Wrapper>
        </div>
    }
</div>

<style lang="scss">    
    :global(.post-header > .wrapper > .flex-inline) {
        width: 100%;
    }
    
    .post-header {
        position: sticky;
        top: 0;
        z-index: var(--sticky-z-index);

        .main-bar {
            min-height: var(--space-xl-2xl);
            display: flex;
            width: 100%;
            justify-content: stretch;
        }
    }
</style>