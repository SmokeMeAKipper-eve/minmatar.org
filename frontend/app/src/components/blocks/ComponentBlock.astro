---
import Wrapper from '@components/compositions/Wrapper.astro';

interface Props {
    padding_block?:     string;
    padding_inline?:    string;
    width?:             'narrow' | 'normal';
    dark?:              boolean;
    [propName: string]: any;
}

const {
    padding_block = 'var(--component-padding-block)',
    padding_inline = 'var(--space-l-xl)',
    width = 'normal',
    dark = false,
    ...attributes
} = Astro.props

const effect = (dark ? 'solid-transparency' : 'light-transparency')

delete attributes.class
---

<Wrapper
    class:list={['[ card component ]', Astro.props.class, effect]}
    padding_block={padding_block}
    padding_inline={padding_inline}
    max_width={(width == 'narrow' ? 'var(--max-text-width)' : '100%')}
    {...attributes}>
    <slot />
</Wrapper>