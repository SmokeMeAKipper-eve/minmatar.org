---
import type { Group, Character } from '@dtypes/api.minmatar.org'
import type { CharacterBasic, GroupRequestAction, GroupItemType } from '@dtypes/layout_components'

interface Props {
    character:  CharacterBasic;
    type:       GroupRequestAction;
    group:      Group;
    group_type: GroupItemType,
}

const {
    group,
    type,
    character,
    group_type,
} = Astro.props

import Flexblock from '@components/compositions/Flexblock.astro';
import PilotBadge from '@components/blocks/PilotBadge.astro';
import GroupItem from '@components/blocks/GroupItem.astro';

import TrashIcon from '@components/icons/buttons/TrashIcon.astro';
import ArrowDown from '@components/icons/buttons/ArrowDown.astro';
import Wrapper from '@components/compositions/Wrapper.astro';
---
<Flexblock gap="var(--space-2xs)">
    <PilotBadge
        class="[ w-full ]"
        character_id={character.character_id}
        character_name={character.character_name}
        corporation={character.corporation}
    />
    <Wrapper
        padding_block='0'
        padding_inline='23px'
        max_width='64px'
        class:list={ [ type, 'flex' ] }
    >
        {type == 'deny' ?
            <TrashIcon />
            :
            <ArrowDown />
        }
    </Wrapper>
    <GroupItem
        group={group}
        type={group_type}
    />
</Flexblock>

<style lang="scss">
    .accept {
        color: var(--green);
    }

    .deny {
        color: var(--fleet-red);
    }
</style>