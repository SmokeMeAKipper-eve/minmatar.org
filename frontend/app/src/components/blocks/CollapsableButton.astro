---
import FluidFixed from '@components/compositions/FluidFixed.astro';
import CaretIcon from '@components/icons/CaretIcon.astro';
---

<button {...Astro.props}>
    <FluidFixed width="20px" gap="var(--space-s)" class="[ items-center ]">
        <slot />
        <CaretIcon :class="expanded ? '' : 'collapsed'" />
    </FluidFixed>
</button>

<style lang="scss">
    button {
        all: unset;
        cursor: pointer;

        &:focus {
            outline: revert;
        }

        svg {
            color: var(--highlight);
        }

        .collapsed {
            transform: rotate(180deg);
        }
    }
</style>