---
interface Props {
    href?:      string;
}

const {
    href,
} = Astro.props;

const Element = href ? 'a' : 'button';
---

<Element
    href={ href }
    {...Astro.props}
>
    <slot />
</Element>

<style lang="scss">
    a,
    button {
        border: none;
        padding: 0;
        text-align: left;
        background-color: transparent;
        color: inherit;
        cursor: pointer;
    }
</style>